<div class="banner"
style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>


<div class="container">
  <div class="cards m-5">
    <% @garden.plants.each do |plant| %>

    <div class="card-category"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
    url('<%= plant.image_url %>')">
      <%= plant.name %>
      <%= link_to '+', plant_path(plant), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'card-remove-link' %>
    </div>
    <% end %>
  </div>
  <%= simple_form_for [@garden, @plant] do |f| %>
    <%= f.input :name %>
    <%= f.input :image_url %>
    <%= f.submit 'Add a plant', class: 'btn btn-primary' %>
  <% end %>

</div>
